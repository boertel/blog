---
layout: null
sitemap:
  exclude: 'yes'
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% for post in site.posts %}
    {% unless post.published == false %}
      <url>
        <loc>{{ site.url }}{{ post.url | remove: 'index.html' }}</loc>
        {% if post.date %}<lastmod>{{ post.date | date_to_xmlschema }}</lastmod>{% endif %}
        {% if post.time %}<lastmod>{{ post.time | date_to_xmlschema }}</lastmod>{% endif %}
        <changefreq>monthly</changefreq>
        <priority>0.5</priority>
      </url>
    {% endunless %}
  {% endfor %}
  {% for page in site.pages %}
      {% unless page.sitemap.exclude == "yes" or page.name == "feed.xml" or page.url contains "goto/" or page.url == "/redirects.json" %}
      <url>
        <loc>{{ site.url }}{{ page.url | remove: 'index.html' | remove: '.html' }}</loc>
        {% if post.time %}<lastmod>{{ page.time | date_to_xmlschema }}</lastmod>{% endif %}
        {% if page.date %}<lastmod>{{ page.date | date_to_xmlschema }}</lastmod>{% endif %}
        <changefreq>weekly</changefreq>
        <priority>0.7</priority>
      </url>
    {% endunless %}
  {% endfor %}

</urlset>
